<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_CMDONATIONCONTENT</name>
	<version>1.1.1</version>
	<creationDate>January 12, 2016</creationDate>
	<copyright>(C) 2014-2016 CMExtension Team</copyright>
	<author>CMExtension team</author>
	<authorEmail>cmext.vn@gmail.com</authorEmail>
	<authorUrl>www.cmext.vn</authorUrl>
	<license>GNU General Public License version 2 or later</license>
	<description>PLG_CONTENT_CMDONATIONCONTENT_XML_DESCRIPTION</description>
	<files>
		<folder>language</folder>
		<folder>layouts</folder>
		<filename plugin="cmdonationcontent">cmdonationcontent.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="enable_donations"
					type="radio"
					class="btn-group"
					default="1"
					description="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_DONATIONS_DESC"
					label="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_DONATIONS_LABEL">
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>

				<field name="enable_amount"
					type="radio"
					class="btn-group"
					default="1"
					description="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_AMOUNT_DESC"
					label="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_AMOUNT_LABEL">
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>

				<field name="enable_donation_form"
					type="radio"
					class="btn-group"
					default="1"
					description="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_DONATION_FORM_DESC"
					label="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_DONATION_FORM_LABEL">
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>

				<field name="enable_latest_donations"
					type="radio"
					class="btn-group"
					default="1"
					description="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_LATEST_DONATIONS_DESC"
					label="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_LATEST_DONATIONS_LABEL">
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>

				<field name="enable_top_donors"
					type="radio"
					class="btn-group"
					default="1"
					description="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_TOP_DONORS_DESC"
					label="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_TOP_DONORS_LABEL">
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>

				<field name="enable_top_countries"
					type="radio"
					class="btn-group"
					default="1"
					description="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_TOP_COUNTRIES_DESC"
					label="PLG_CONTENT_CMDONATIONCONTENT_FIELD_ENABLE_TOP_COUNTRIES_LABEL">
					<option value="1">JENABLED</option>
					<option value="0">JDISABLED</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
